{
    "openapi": "3.0.0",
    "info": {
        "title": "Hotel API",
        "contact": {
            "name": "Leonardo Oliveira",
            "email": "leo.oliveira8@gmail.com"
        },
        "version": "1.0"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "description": "Handle a login request to the application.",
                "operationId": "/api/auth/login",
                "parameters": [
                    {
                        "name": "user_name",
                        "in": "path",
                        "description": "User Name",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "path",
                        "description": "User Password",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Return login user token",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "400": {
                        "description": "Error: Bad request. When required parameters were not supplied."
                    }
                }
            }
        },
        "/api/rooms": {
            "get": {
                "tags": [
                    "Rooms"
                ],
                "description": "Get list of all rooms",
                "operationId": "/api/rooms",
                "responses": {
                    "200": {
                        "description": "Return List of all rooms",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        },
        "/api/api/rooms/occupied": {
            "get": {
                "tags": [
                    "Rooms"
                ],
                "description": "Get list of rooms that are not available.",
                "operationId": "/api/rooms/occupied",
                "responses": {
                    "200": {
                        "description": "Return list of rooms.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        },
        "/api/api/rooms/available": {
            "get": {
                "tags": [
                    "Rooms"
                ],
                "description": "Get list of rooms that are available.",
                "operationId": "/api/rooms/available",
                "responses": {
                    "200": {
                        "description": "Return list of rooms.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        },
        "/api/api/rooms/{id}": {
            "get": {
                "tags": [
                    "Rooms"
                ],
                "description": "Get list of rooms that are available.",
                "operationId": "/api/rooms/{id}",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id of rooms to show",
                        "required": true,
                        "schema": {
                            "type": "int"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Rooms information.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        }
    }
}